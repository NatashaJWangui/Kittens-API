<div class="container">
  <div class="form-header">
    <h1>✏️ Edit <%= @kitten.name %></h1>
    <p>Update your kitten's information</p>
  </div>

  <%= render 'form', kitten: @kitten %>
  
  <div class="danger-zone">
    <h3>Danger Zone</h3>
    <p>Remove this kitten from the system:</p>
    <%= link_to "Delete #{@kitten.name}", @kitten, method: :delete, 
                class: "btn btn-danger",
                confirm: "Are you sure you want to permanently remove #{@kitten.name}?" %>
  </div>
</div>